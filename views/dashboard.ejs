<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="http://localhost:3000/stylesheets/style.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <title>Document</title>
  </head>
  <body>
    <div class="top-head">
      <header>
        <img src="http://localhost:3000/images/logo.png" alt="" />
        <nav>
          <ul>
            <li><a href="/favorites">Favorites</a></li>
            <li><a href="/favorites">Docs</a></li>
            <li><a href="/login" class="logout">Logout</a></li>
          </ul>
        </nav>
      </header>
      <h1>The Rick and Morty API</h1>
    </div>

    <div class="row">
      <% characters.forEach(function(character) { %>
      <div class="box">
        <img src="<%= character.image %>" />
        <div class="text-left">
          <h2><%= character.name %></h2>
          <p><%= character.status %></p>
          <a href="/favorites/<%= character.id %>">Favorite</a>
        </div>
      </div>
      <% }); %>
    </div>
    <footer>
      <div class="info">
        <span>Charaters: 1129</span>
        <span>Locations: 126</span>
        <span>Episodes: 41</span>
      </div>
      <div class="powered">
        <span>Developed by aldi</span>
      </div>
    </footer>
  </body>
</html>
